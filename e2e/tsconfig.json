{
  "compilerOptions": {
    "outDir": "./.tsbuild/",
    "sourceMap": false,
    "target": "es2019",
    "module": "commonjs",
    "removeComments": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "types": [
      "node",
      // "webdriverio/async",
      "@wdio/mocha-framework",
      "@wdio/cucumber-framework",
      "expect-webdriverio",
      "@wdio/globals/types"
    ]
  },
  "include": ["./**/*.ts"]
}
