{
    "compilerOptions": {
        "noImplicitAny": false,
        "allowJs": true,
        "checkJs": false,
        "declaration": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "skipLibCheck": true,
        "jsx": "react-native",
        "lib": ["es6"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true,
        "target": "esnext"
    },
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js",
        "android",
        "ios",
        "__mocks__",
        "__tests__",
        "e2e",
        ".jest",
        "./react-native.config.js",
        "./setupTests.js",
        "tasks",
        "tests-helpers",
    ]
  }
