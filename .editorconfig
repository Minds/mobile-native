root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.js]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
prettier.singleQuote = true

[*.tsx]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
prettier.singleQuote = true

[*.ts]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
prettier.singleQuote = true

# Windows files
[*.bat]
end_of_line = crlf

